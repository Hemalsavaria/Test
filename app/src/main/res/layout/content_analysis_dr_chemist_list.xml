<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_bg"
	android:orientation="vertical"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp">
	<LinearLayout
		android:layout_marginRight="3dp"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:background="@color/white">

		<Spinner
			android:id="@+id/month"
			android:layout_width="match_parent"
			android:layout_height="50dp"></Spinner>

	</LinearLayout>


	<LinearLayout
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<Spinner
			android:id="@+id/dr_chemist"
			android:layout_width="match_parent"
			android:layout_height="50dp"></Spinner>

	</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/mr_analysis"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="@color/white"
		android:orientation="horizontal"
		android:padding="@dimen/_5sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/_5sdp"
			android:layout_marginRight="@dimen/_5sdp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:padding="@dimen/_5sdp">

			<TextView
				android:padding="3dp"
				android:textStyle="bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="3 / 3 Completed"
				android:textColor="@color/green"
				android:textSize="17sp" />

			<TextView
				android:padding="3dp"
				android:id="@+id/doctor_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="Dr - Hemal savaria"
				android:textColor="@color/black"
				android:textSize="19sp"
				 />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="5dp"
				android:background="@color/grey_bg"
				android:visibility="gone" />

			<LinearLayout
				android:padding="3dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/hospital_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:fontFamily="@font/avenir_regular"
					android:text="Reflex Infoech , Ahmedabad"
					android:textColor="@color/black"
					android:textSize="15sp" />


			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:id="@+id/reports"
			android:layout_width="@dimen/_25sdp"
			android:layout_height="@dimen/_25sdp"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:padding="7dp"
			android:rotation="270"
			android:src="@drawable/ic_arrow_down_blue" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="@color/white"
		android:orientation="horizontal"
		android:padding="@dimen/_5sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/_5sdp"
			android:layout_marginRight="@dimen/_5sdp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:padding="@dimen/_5sdp">
			<TextView
				android:padding="3dp"
				android:textStyle="bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="2 / 3 Completed"
				android:textColor="@color/blue"
				android:textSize="17sp" />
			<TextView
				android:padding="3dp"
				android:id="@+id/doctor_name1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="MR - Hemal savaria"
				android:textColor="@color/black"
				android:textSize="19sp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="5dp"
				android:background="@color/grey_bg"
				android:visibility="gone" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView

					android:padding="3dp"
					android:id="@+id/hospital_name1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:fontFamily="@font/avenir_regular"
					android:text="Shahibag , Ahmedabad"
					android:textColor="@color/black"
					android:textSize="15sp" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/mr_details1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/_5sdp"
						android:ellipsize="marquee"
						android:fontFamily="@font/avenir_regular"
						android:gravity="center"
						android:text="Details"
						android:textColor="@color/toolbar_color"
						android:textSize="15sp"
						android:textStyle="bold"
						android:visibility="gone" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/_8sdp"
						android:ellipsize="marquee"
						android:fontFamily="@font/avenir_regular"
						android:gravity="center"
						android:text="Reports"
						android:textColor="@color/toolbar_color"
						android:textSize="15sp"
						android:textStyle="bold"
						android:visibility="gone" />

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:id="@+id/reports1"
			android:layout_width="@dimen/_25sdp"
			android:layout_height="@dimen/_25sdp"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:padding="7dp"
			android:rotation="270"
			android:src="@drawable/ic_arrow_down_blue" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="@color/white"
		android:orientation="horizontal"
		android:padding="@dimen/_5sdp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/_5sdp"
			android:layout_marginRight="@dimen/_5sdp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:padding="@dimen/_5sdp">
			<TextView
				android:padding="3dp"
				android:textStyle="bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="0 / 3 Completed"
				android:textColor="@color/red"
				android:textSize="17sp" />
			<TextView
				android:id="@+id/doctor_name2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:fontFamily="@font/avenir_regular"
				android:text="MR - Hemal savaria"
				android:textColor="@color/black"
				android:textSize="19sp"
				android:padding="3dp" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="5dp"
				android:background="@color/grey_bg"
				android:visibility="gone" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView

					android:padding="3dp"
					android:id="@+id/hospital_name2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:fontFamily="@font/avenir_regular"
					android:text="Shahibag , Ahmedabad"
					android:textColor="@color/black"
					android:textSize="15sp" />



			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:id="@+id/reports2"
			android:layout_width="@dimen/_25sdp"
			android:layout_height="@dimen/_25sdp"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:padding="7dp"
			android:rotation="270"
			android:src="@drawable/ic_arrow_down_blue" />

	</LinearLayout>

</LinearLayout>