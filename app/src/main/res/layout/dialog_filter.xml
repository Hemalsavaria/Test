<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layout_new_mr"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	android:padding="20dp">


	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_marginBottom="5dp"
		android:visibility="visible"
		app:cardBackgroundColor="@color/white">

		<TextView
			android:id="@+id/attendence_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/white"
			android:fontFamily="@font/avenir_regular"
			android:gravity="center"
			android:padding="10dp"
			android:text="Date"
			android:textColor="@color/toolbar_color"
			android:textSize="17sp"
			android:visibility="visible">


		</TextView>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_weight="1"
			android:background="@color/white"
			android:orientation="horizontal"
			android:visibility="gone">

			<com.jaredrummler.materialspinner.MaterialSpinner
				android:id="@+id/select_month"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:fontFamily="@font/avenir_regular"
				android:gravity="center"
				android:text="Monnth"
				android:textColor="@color/black"
				android:textSize="17sp"></com.jaredrummler.materialspinner.MaterialSpinner>
		</LinearLayout>
	</androidx.cardview.widget.CardView>


	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:layout_marginBottom="5dp"
		app:cardBackgroundColor="@color/white"
		app:contentPadding="5dp">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_weight="1"
			android:background="@color/white"
			android:orientation="horizontal">

			<com.jaredrummler.materialspinner.MaterialSpinner
				android:id="@+id/select_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:fontFamily="@font/avenir_regular"
				android:gravity="center"
				android:text="MR"
				android:textColor="@color/black"
				android:textSize="17sp"></com.jaredrummler.materialspinner.MaterialSpinner>
		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:layout_marginBottom="5dp"
		app:cardBackgroundColor="@color/white"
		app:contentPadding="5dp">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_weight="1"
			android:background="@color/white"
			android:orientation="horizontal">

			<com.jaredrummler.materialspinner.MaterialSpinner
				android:id="@+id/present_absent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:fontFamily="@font/avenir_regular"
				android:gravity="center"
				android:text="MR"
				android:textColor="@color/black"
				android:textSize="17sp"></com.jaredrummler.materialspinner.MaterialSpinner>
		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<Button
		android:id="@+id/filter_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="30dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="30dp"
		android:background="@drawable/blue"
		android:text="Filter Data"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="17sp" />

</LinearLayout>